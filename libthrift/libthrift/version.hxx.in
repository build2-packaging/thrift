#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define LIBTHRIFT_VERSION       $libthrift.version.project_number$ULL
#define LIBTHRIFT_VERSION_STR   "$libthrift.version.project$"
#define LIBTHRIFT_VERSION_ID    "$libthrift.version.project_id$"
#define LIBTHRIFT_VERSION_FULL  "$libthrift.version$"

#define LIBTHRIFT_VERSION_MAJOR $libthrift.version.major$
#define LIBTHRIFT_VERSION_MINOR $libthrift.version.minor$
#define LIBTHRIFT_VERSION_PATCH $libthrift.version.patch$

#define LIBTHRIFT_PRE_RELEASE   $libthrift.version.pre_release$

#define LIBTHRIFT_SNAPSHOT_SN   $libthrift.version.snapshot_sn$ULL
#define LIBTHRIFT_SNAPSHOT_ID   "$libthrift.version.snapshot_id$"
